{
    "name": "diablomedia/oauth2-server-zendhttp-bridge",
    "description": "A bridge to Zend\\Http for oauth2-server-php",
    "keywords": ["oauth", "oauth2", "auth", "zf2", "zendframework"],
    "type": "library",
    "license": "MIT",
    "authors":[
        {
            "name": "Ari Pringle",
            "email": "ari@diablomedia.com",
            "homepage": "https://diablomedia.com"
        },
        {
            "name": "Jay Klehr",
            "email": "jay@diablomedia.com",
            "homepage": "https://diablomedia.com"
        }
    ],
    "homepage": "http://github.com/diablomedia/oauth2-server-zendhttp-bridge",
    "require": {
        "php": ">=5.6.0",
        "zendframework/zend-http": "^2.0",
        "bshaffer/oauth2-server-php": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "2.16.1",
        "phpstan/phpstan": "0.12.19",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-0": {"OAuth2\\ZendHttpPhpEnvironmentBridge": "src/"}
    },
    "autoload-dev": {
        "psr-0": {"OAuth2Test\\ZendHttpPhpEnvironmentBridge": "test/"}
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyze -c phpstan.neon --no-progress --ansi",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    }
}
